{
  "name": "@singularities/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:migrate": "tsx src/db/migrate.ts",
    "sim:progression": "node --import tsx src/simulations/progressionSimulation.ts",
    "sim:economy": "node --import tsx src/simulations/economySimulation.ts",
    "sim:all": "pnpm run sim:progression && pnpm run sim:economy"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.0",
    "@fastify/jwt": "^9.0.0",
    "@fastify/websocket": "^11.0.0",
    "@singularities/shared": "workspace:*",
    "bs58": "^6.0.0",
    "dotenv": "^16.4.0",
    "fastify": "^5.2.0",
    "ioredis": "^5.4.0",
    "pg": "^8.13.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
