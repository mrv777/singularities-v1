{
  "name": "@singularities/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "node --import tsx --test src/**/*.test.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "sim:progression": "node --import tsx src/simulations/progressionSimulation.ts",
    "sim:economy": "node --import tsx src/simulations/economySimulation.ts",
    "sim:day1": "node --import tsx src/simulations/day1HookSimulation.ts",
    "sim:bots": "node --import tsx src/simulations/botArenaSimulation.ts",
    "sim:health": "node --import tsx src/simulations/systemHealthSimulation.ts",
    "sim:newplayer": "node --import tsx src/simulations/newPlayerSimulation.ts",
    "sim:energy": "node --import tsx src/simulations/energyBudgetSimulation.ts",
    "sim:pvp": "node --import tsx src/simulations/pvpBalanceSimulation.ts",
    "sim:modules": "node --import tsx src/simulations/modulePathSimulation.ts",
    "sim:death": "node --import tsx src/simulations/deathRebirthSimulation.ts",
    "sim:decisions": "node --import tsx src/simulations/decisionBalanceSimulation.ts",
    "sim:modifiers": "node --import tsx src/simulations/modifierImpactSimulation.ts",
    "sim:catchup": "node --import tsx src/simulations/catchUpSimulation.ts",
    "sim:endgame": "node --import tsx src/simulations/endgameAnalysis.ts",
    "sim:inflation": "node --import tsx src/simulations/inflationAnalysis.ts",
    "sim:exploits": "node --import tsx src/simulations/exploitDetectionSimulation.ts",
    "sim:worldEvents": "node --import tsx src/simulations/worldEventSimulation.ts",
    "sim:all": "set -e; pnpm -C ../shared build; pnpm run sim:progression; pnpm run sim:economy; pnpm run sim:day1; pnpm run sim:bots; pnpm run sim:health; pnpm run sim:newplayer; pnpm run sim:energy; pnpm run sim:pvp; pnpm run sim:modules; pnpm run sim:death; pnpm run sim:decisions; pnpm run sim:modifiers; pnpm run sim:catchup; pnpm run sim:endgame; pnpm run sim:exploits; pnpm run sim:worldEvents"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@fastify/cors": "^11.0.0",
    "@fastify/jwt": "^9.0.0",
    "@fastify/websocket": "^11.0.0",
    "@singularities/shared": "workspace:*",
    "@solana/web3.js": "^1.98.4",
    "bs58": "^6.0.0",
    "dotenv": "^16.4.0",
    "fastify": "^5.2.0",
    "ioredis": "^5.4.0",
    "pg": "^8.13.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
